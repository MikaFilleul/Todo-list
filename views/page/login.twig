{% extends "/template/main.twig" %}

{% block title %}Log In{% endblock %}

{% block page %}
<div class="row w-100 h-100">
  <div class="col-sm-7">
    <div class="h-100 d-flex flex-column justify-content-center align-items-center">
      <div class="div-w75">
        <h1 class="display-4">Hello world!</h1>
        <p class="lead">This is a simple Todo list app, developped in PHP, by <a 
          href="https://github.com/Adonis-Stavridis"
          target="_blank"
          rel="noopener noreferrer"
        >Adonis Stavridis</a> and 
        <a 
          href="https://github.com/MikaFilleul"
          target="_blank"
          rel="noopener noreferrer"
        >Mika Filleul</a>.</p>
        <a
          class="btn btn-secondary btn-lg"
          href="https://github.com/Adonis-Stavridis/Todo-list"
          target="_blank"
          rel="noopener noreferrer"
          role="button"
        >
          <img class="mini-icon" src="img/github.svg" alt="Gh-logo">
          Source code
        </a>
      </div>
    </div>
  </div>

  <div class="col-sm-5">
    <div class="h-100 d-flex flex-column justify-content-center align-items-center">
    
      <img class="img-icon mb-2" src="img/logo.svg" alt="TODO LIST">
      <div class="card text-white bg-dark mb-3 div-w75">
        <div class="card-header">
          {% block formTitle %}Log In{% endblock %}
        </div>
        <div class="card-body">
          {% block form %}
          <form action="{{ url_for('login') }}" method="post" autocomplete="off">
            <div class="form-group">
              <label for="usernameInput">Username</label>
              <input
                name="username"
                type="text"
                class="form-control"
                id="usernameInput"
                required
                autofocus
              >
            </div>
            <div class="form-group">
              <label for="passwordInput">Password</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="passwordInput"
                aria-describedby="passwordHint"
                required
              >
              <small id="passwordHint" class="form-text text-muted">
                Don't share your password with anyone.
              </small>
            </div>
            <button type="submit" class="btn btn-primary btn-block">
              Log In
            </button>
          </form>
          {% endblock %}
        </div>
      </div>

      <div class="card text-white bg-dark mb-3 div-w75">
        <div class="card-body">
          {% block formFooter %}
          <span>New to Todo? 
            <a href="/signup" class="text-primary">Create an account</a>
          </span>
          {% endblock %}
        </div>
      </div>

    </div>
  </div>
</div>
{% endblock %}

{% block notification %}
<div class="alert alert-danger" role="alert">
  <img class="mini-icon float-left mr-4" src="img/warning.svg" alt="Warning : ">
  Username and/or password incorrect!
</div>
{% endblock %}
